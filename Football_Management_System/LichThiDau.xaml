<Window x:Class="Football_Management_System.LichThiDau"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lich Thi Dau" Height="600" Width="1000" Background="#F2F2F2"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Border Background="#1E88E5" CornerRadius="0,0,8,8" Padding="15">
            <TextBlock Text="QUAN LY LICH THI DAU" Foreground="White" FontSize="22" FontWeight="Bold" VerticalAlignment="Center"/>
        </Border>
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Border Background="White" CornerRadius="8" Padding="10">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="Tim kiem" FontWeight="Bold" FontSize="14" Margin="0,0,0,5"/>
                        <TextBox x:Name="txtSearch" Height="28" TextChanged="txtSearch_TextChanged"/>
                        <TextBlock Text="Loc theo giai dau" FontWeight="Bold" FontSize="14" Margin="0,15,0,5"/>
                        <ComboBox x:Name="cboTournament" Height="28" DisplayMemberPath="TournamentName" SelectedValuePath="TournamentID"
                                  SelectionChanged="cboTournament_SelectionChanged"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0">
                            <Button Content="Lam moi" Width="100" Height="30" Background="#607D8B" Foreground="White" Click="btnRefresh_Click"/>
                        </StackPanel>
                        <Border Background="#E3F2FD" CornerRadius="5" Padding="8" Margin="0,15,0,0">
                            <TextBlock x:Name="txtStatus" Text="San sang..." TextWrapping="Wrap"/>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Border>
            <Border Grid.Column="1" Background="White" CornerRadius="8" Margin="10,0,0,0" Padding="5">
                <DataGrid x:Name="dgSchedule" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True"
                          RowHeight="35" AlternatingRowBackground="#E3F2FD" GridLinesVisibility="Horizontal">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Ngay" Binding="{Binding MatchDate, StringFormat=dd/MM/yyyy HH:mm}" Width="130"/>
                        <DataGridTextColumn Header="Doi Nha" Binding="{Binding HomeTeamName}" Width="*"/>
                        <DataGridTextColumn Header="Doi Khach" Binding="{Binding AwayTeamName}" Width="*"/>
                        <DataGridTextColumn Header="Ket Qua" Binding="{Binding Result}" Width="80"/>
                        <DataGridTextColumn Header="San" Binding="{Binding Stadium}" Width="120"/>
                        <DataGridTextColumn Header="Trang Thai" Binding="{Binding MatchStatus}" Width="100"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>
        </Grid>
    </Grid>
</Window>
