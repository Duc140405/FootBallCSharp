<Window x:Class="Football_Management_System.StandingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Bảng Xếp Hạng" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen">
    <Grid Background="#F2F2F2">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" Background="#1E88E5" CornerRadius="10" Margin="10" Padding="15">
            <TextBlock Text="BẢNG XẾP HẠNG GIẢI ĐẤU" Foreground="White" FontSize="22" FontWeight="Bold" VerticalAlignment="Center"/>
        </Border>
        <Grid Grid.Row="1" Margin="10,0,10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Border Grid.Column="0" Background="White" CornerRadius="6" Padding="12">
                <StackPanel>
                    <TextBlock Text="Giải đấu" FontWeight="SemiBold" Margin="0,0,0,6"/>
                    <ComboBox x:Name="cboTournament" Height="30" Margin="0,0,0,12"
                              DisplayMemberPath="TournamentName" SelectedValuePath="TournamentID"
                              SelectionChanged="cboTournament_SelectionChanged"/>
                    <TextBlock Text="Tìm kiếm đội" FontWeight="SemiBold" Margin="0,0,0,6"/>
                    <TextBox x:Name="txtSearch" Height="30" Margin="0,0,0,12" TextChanged="txtSearch_TextChanged"/>
                    <Button Content="Làm mới" Height="35" Margin="0,10,0,0" Background="#607D8B" Foreground="White" Click="btnRefresh_Click"/>
                    <Border Background="#E3F2FD" CornerRadius="5" Padding="8" Margin="0,15,0,0">
                        <TextBlock x:Name="txtStatus" Text="Sẵn sàng..." TextWrapping="Wrap"/>
                    </Border>
                </StackPanel>
            </Border>
            <Border Grid.Column="1" Background="White" CornerRadius="6" Padding="12" Margin="10,0,0,0">
                <DataGrid x:Name="dgStandings" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True"
                          RowHeight="34" FontSize="13">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="STT" Binding="{Binding Position}" Width="50"/>
                        <DataGridTextColumn Header="Đội Bóng" Binding="{Binding Team.TeamName}" Width="*"/>
                        <DataGridTextColumn Header="Trận" Binding="{Binding MatchesPlayed}" Width="55"/>
                        <DataGridTextColumn Header="Thắng" Binding="{Binding Wins}" Width="55"/>
                        <DataGridTextColumn Header="Hòa" Binding="{Binding Draws}" Width="55"/>
                        <DataGridTextColumn Header="Thua" Binding="{Binding Losses}" Width="55"/>
                        <DataGridTextColumn Header="BT" Binding="{Binding GoalsFor}" Width="50"/>
                        <DataGridTextColumn Header="BB" Binding="{Binding GoalsAgainst}" Width="50"/>
                        <DataGridTextColumn Header="HS" Binding="{Binding GoalDifference}" Width="50"/>
                        <DataGridTextColumn Header="Điểm" Binding="{Binding Points}" Width="55"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>
        </Grid>
    </Grid>
</Window>
