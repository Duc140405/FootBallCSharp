<Window x:Class="Football_Management_System.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Football Management System" Height="550" Width="650"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Background="#1976D2">
        <Border Background="White" CornerRadius="16" Width="460" Height="420" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="40">
            <Border.Effect>
                <DropShadowEffect BlurRadius="25" ShadowDepth="5" Opacity="0.25"/>
            </Border.Effect>
            <Grid>
                <!-- LOGIN PANEL -->
                <StackPanel x:Name="LoginPanel">
                    <TextBlock Text="DANG NHAP" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,30"/>
                    <TextBlock Text="Ten dang nhap"/>
                    <TextBox x:Name="txtUsername" Height="45" Margin="0,5,0,15"/>
                    <TextBlock Text="Mat khau"/>
                    <PasswordBox x:Name="txtPassword" Height="45" Margin="0,5,0,10"/>
                    <TextBlock x:Name="txtError" Foreground="Red" Visibility="Collapsed" Margin="0,0,0,10"/>
                    <Button Content="DANG NHAP" Height="45" Background="#1976D2" Foreground="White" FontWeight="Bold" Click="BtnLogin_Click"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                        <TextBlock Text="Chua co tai khoan? " VerticalAlignment="Center"/>
                        <TextBlock Text="Dang ky" Foreground="#1976D2" Cursor="Hand" FontWeight="SemiBold" MouseDown="ShowRegister_Click"/>
                    </StackPanel>
                    <TextBlock Text="Quen mat khau?" Foreground="#1976D2" Cursor="Hand" HorizontalAlignment="Center" Margin="0,10,0,0" MouseDown="ForgotPassword_Click"/>
                </StackPanel>
                <!-- REGISTER PANEL -->
                <StackPanel x:Name="RegisterPanel" Visibility="Collapsed">
                    <TextBlock Text="DANG KY" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,30"/>
                    <TextBlock Text="Ten dang nhap"/>
                    <TextBox x:Name="txtRegUsername" Height="45" Margin="0,5,0,15"/>
                    <TextBlock Text="Mat khau"/>
                    <PasswordBox x:Name="txtRegPassword" Height="45" Margin="0,5,0,15"/>
                    <TextBlock Text="Nhap lai mat khau"/>
                    <PasswordBox x:Name="txtConfirmPassword" Height="45" Margin="0,5,0,20"/>
                    <Button Content="DANG KY" Height="45" Background="#388E3C" Foreground="White" FontWeight="Bold" Click="BtnRegister_Click"/>
                    <TextBlock Text="Quay lai dang nhap" Foreground="#1976D2" Cursor="Hand" HorizontalAlignment="Center" Margin="0,20,0,0" MouseDown="ShowLogin_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>