<Window x:Class="Football_Management_System.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Football Management System" Height="750" Width="650"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Background="#1976D2">
        <Border Background="White" CornerRadius="16" Width="480" Height="650" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="40">
            <Border.Effect>
                <DropShadowEffect BlurRadius="25" ShadowDepth="5" Opacity="0.25"/>
            </Border.Effect>
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <Grid>
                <!-- LOGIN PANEL -->
                <StackPanel x:Name="LoginPanel">
                    <TextBlock Text="ĐĂNG NHẬP" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,30"/>
                    <TextBlock Text="Tên đăng nhập"/>
                    <TextBox x:Name="txtUsername" Height="45" Margin="0,5,0,15"/>
                    <TextBlock Text="Mật khẩu"/>
                    <PasswordBox x:Name="txtPassword" Height="45" Margin="0,5,0,10"/>
                    <TextBlock x:Name="txtError" Foreground="Red" Visibility="Collapsed" Margin="0,0,0,10"/>
                    <Button Content="ĐĂNG NHẬP" Height="45" Background="#1976D2" Foreground="White" FontWeight="Bold" Click="BtnLogin_Click"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                        <TextBlock Text="Chưa có tài khoản? " VerticalAlignment="Center"/>
                        <TextBlock Text="Đăng ký" Foreground="#1976D2" Cursor="Hand" FontWeight="SemiBold" MouseDown="ShowRegister_Click"/>
                    </StackPanel>
                    <TextBlock Text="Quên mật khẩu?" Foreground="#1976D2" Cursor="Hand" HorizontalAlignment="Center" Margin="0,10,0,0" MouseDown="ForgotPassword_Click"/>
                </StackPanel>
                <!-- REGISTER PANEL -->
                <StackPanel x:Name="RegisterPanel" Visibility="Collapsed">
                    <TextBlock Text="ĐĂNG KÝ" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                    <TextBlock Text="Tên đăng nhập"/>
                    <TextBox x:Name="txtRegUsername" Height="40" Margin="0,5,0,10"/>
                    <TextBlock Text="Email"/>
                    <TextBox x:Name="txtRegEmail" Height="40" Margin="0,5,0,10"/>
                    <TextBlock Text="Họ và tên"/>
                    <TextBox x:Name="txtRegFullName" Height="40" Margin="0,5,0,10"/>
                    <TextBlock Text="Mật khẩu"/>
                    <PasswordBox x:Name="txtRegPassword" Height="40" Margin="0,5,0,10"/>
                    <TextBlock Text="Nhập lại mật khẩu"/>
                    <PasswordBox x:Name="txtConfirmPassword" Height="40" Margin="0,5,0,15"/>
                    <Button Content="ĐĂNG KÝ" Height="45" Background="#388E3C" Foreground="White" FontWeight="Bold" Click="BtnRegister_Click"/>
                    <TextBlock Text="← Quay lại đăng nhập" Foreground="#1976D2" Cursor="Hand" HorizontalAlignment="Center" Margin="0,15,0,0" MouseDown="ShowLogin_Click"/>
                </StackPanel>
            </Grid>            </ScrollViewer>        </Border>
    </Grid>
</Window>