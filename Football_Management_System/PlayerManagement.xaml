<Window x:Class="Football_Management_System.PlayerManagement"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quan ly cau thu" Height="650" Width="1000"
        WindowStartupLocation="CenterScreen" Background="#F5F5F5">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Border Background="#1E88E5" CornerRadius="10" Padding="15">
            <TextBlock Text="QUAN LY CAU THU BONG DA" Foreground="White" FontSize="22" FontWeight="Bold" VerticalAlignment="Center"/>
        </Border>
        <Grid Grid.Row="1" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="320"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Border Background="White" CornerRadius="10" Padding="15" Margin="0,0,10,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="Thong Tin Cau Thu" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                        <TextBlock Text="Ho va ten" Margin="0,0,0,3"/>
                        <TextBox x:Name="txtPlayerName" Height="28"/>
                        <TextBlock Text="Doi bong" Margin="0,10,0,3"/>
                        <ComboBox x:Name="cboTeam" Height="28" DisplayMemberPath="TeamName" SelectedValuePath="TeamID"/>
                        <TextBlock Text="Ngay sinh" Margin="0,10,0,3"/>
                        <DatePicker x:Name="dpDateOfBirth" Height="28"/>
                        <TextBlock Text="Quoc tich" Margin="0,10,0,3"/>
                        <TextBox x:Name="txtNationality" Height="28"/>
                        <TextBlock Text="So ao" Margin="0,10,0,3"/>
                        <TextBox x:Name="txtJerseyNumber" Height="28"/>
                        <TextBlock Text="Vi tri" Margin="0,10,0,3"/>
                        <ComboBox x:Name="cboPosition" Height="28">
                            <ComboBoxItem Content="GK"/>
                            <ComboBoxItem Content="DF"/>
                            <ComboBoxItem Content="MF"/>
                            <ComboBoxItem Content="FW"/>
                        </ComboBox>
                        <TextBlock Text="Trang thai" Margin="0,10,0,3"/>
                        <ComboBox x:Name="cboStatus" Height="28">
                            <ComboBoxItem Content="San sang"/>
                            <ComboBoxItem Content="Chan thuong"/>
                            <ComboBoxItem Content="Treo gio"/>
                        </ComboBox>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0">
                            <Button Content="Them" Width="70" Height="30" Margin="5" Background="#43A047" Foreground="White" Click="btnAdd_Click"/>
                            <Button Content="Sua" Width="70" Height="30" Margin="5" Background="#FB8C00" Foreground="White" Click="btnEdit_Click"/>
                            <Button Content="Xoa" Width="70" Height="30" Margin="5" Background="#E53935" Foreground="White" Click="btnDelete_Click"/>
                            <Button Content="Lam moi" Width="70" Height="30" Margin="5" Background="#607D8B" Foreground="White" Click="btnClear_Click"/>
                        </StackPanel>
                        <Border Background="#E3F2FD" CornerRadius="5" Padding="8" Margin="0,10,0,0">
                            <TextBlock x:Name="txtStatus" Text="San sang..." TextWrapping="Wrap"/>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Border>
            <Border Grid.Column="1" Background="White" CornerRadius="10" Padding="10">
                <DataGrid x:Name="dgPlayers" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True"
                          SelectionChanged="dgPlayers_SelectionChanged">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Ho Ten" Binding="{Binding PlayerName}" Width="*"/>
                        <DataGridTextColumn Header="Doi" Binding="{Binding Team.TeamName}" Width="120"/>
                        <DataGridTextColumn Header="So Ao" Binding="{Binding JerseyNumber}" Width="60"/>
                        <DataGridTextColumn Header="Vi Tri" Binding="{Binding Position}" Width="60"/>
                        <DataGridTextColumn Header="Quoc Tich" Binding="{Binding Nationality}" Width="100"/>
                        <DataGridTextColumn Header="Trang Thai" Binding="{Binding Status}" Width="90"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>
        </Grid>
    </Grid>
</Window>