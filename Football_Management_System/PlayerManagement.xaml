<Window x:Class="Football_Management_System.PlayerManagement"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quản Lý Cầu Thủ"
        Height="650"
        Width="1050"
        Background="#F4F6F9"
        WindowStartupLocation="CenterScreen"
        FontFamily="Segoe UI">

    <Window.Resources>
        <DropShadowEffect x:Key="CardShadow" BlurRadius="10" ShadowDepth="2" Direction="270" Color="#D1D9E6" Opacity="0.5"/>

        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#495057"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
        </Style>

        <Style TargetType="Control" x:Key="InputStyle">
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="BorderBrush" Value="#CED4DA"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Padding" Value="15,6"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.85"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#E9ECEF"/>
            <Setter Property="Foreground" Value="#343A40"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="BorderBrush" Value="#DEE2E6"/>
        </Style>
        <Style TargetType="DataGridCell">
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridCell">
                        <Border Padding="{TemplateBinding Padding}" Background="{TemplateBinding Background}">
                            <ContentPresenter VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#E3F2FD"/>
                    <Setter Property="Foreground" Value="Black"/>
                    <Setter Property="BorderThickness" Value="0"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>

        <Border Background="#1A73E8" Height="65" Effect="{StaticResource CardShadow}">
            <TextBlock Text="⚽ QUẢN LÝ CẦU THỦ"
                       Foreground="White"
                       FontSize="22"
                       FontWeight="Bold"
                       VerticalAlignment="Center"
                       Margin="25,0"/>
        </Border>

        <Grid Grid.Row="1" Margin="20,20,20,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Background="White"
                    CornerRadius="12"
                    Padding="20"
                    Margin="0,0,0,20"
                    Effect="{StaticResource CardShadow}">

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="90"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="90"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="45"/>
                        <RowDefinition Height="45"/>
                        <RowDefinition Height="50"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Họ và tên:" Style="{StaticResource LabelStyle}"/>
                    <TextBox x:Name="txtPlayerName" Grid.Column="1" Style="{StaticResource InputStyle}" Height="32"/>

                    <TextBlock Text="Đội bóng:" Grid.Column="3" Style="{StaticResource LabelStyle}"/>
                    <ComboBox x:Name="cboTeam" Grid.Column="4" Style="{StaticResource InputStyle}" Height="32"
                              DisplayMemberPath="TeamName" SelectedValuePath="TeamID"/>

                    <TextBlock Text="Số áo:" Grid.Column="6" Style="{StaticResource LabelStyle}"/>
                    <TextBox x:Name="txtJerseyNumber" Grid.Column="7" Style="{StaticResource InputStyle}" Height="32"/>

                    <TextBlock Text="Ngày sinh:" Grid.Row="1" Style="{StaticResource LabelStyle}"/>
                    <DatePicker x:Name="dpDateOfBirth" Grid.Row="1" Grid.Column="1" Style="{StaticResource InputStyle}" Height="32"/>

                    <TextBlock Text="Quốc tịch:" Grid.Row="1" Grid.Column="3" Style="{StaticResource LabelStyle}"/>
                    <TextBox x:Name="txtNationality" Grid.Row="1" Grid.Column="4" Style="{StaticResource InputStyle}" Height="32"/>

                    <TextBlock Text="Vị trí:" Grid.Row="1" Grid.Column="6" Style="{StaticResource LabelStyle}"/>
                    <ComboBox x:Name="cboPosition" Grid.Row="1" Grid.Column="7" Style="{StaticResource InputStyle}" Height="32">
                        <ComboBoxItem Content="GK (Thủ môn)"/>
                        <ComboBoxItem Content="DF (Hậu vệ)"/>
                        <ComboBoxItem Content="MF (Tiền vệ)"/>
                        <ComboBoxItem Content="FW (Tiền đạo)"/>
                    </ComboBox>

                    <TextBlock Text="Trạng thái:" Grid.Row="2" Style="{StaticResource LabelStyle}"/>
                    <ComboBox x:Name="cboStatus" Grid.Row="2" Grid.Column="1" Style="{StaticResource InputStyle}" Height="32">
                        <ComboBoxItem Content="Sẵn sàng"/>
                        <ComboBoxItem Content="Chấn thương"/>
                        <ComboBoxItem Content="Treo giò"/>
                    </ComboBox>

                    <StackPanel Grid.Row="2" Grid.Column="3" Grid.ColumnSpan="5"
                                Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom">
                        <Button Content="➕ Thêm" Background="#28A745" Foreground="White" Click="btnAdd_Click" Width="100"/>
                        <Button Content="✏️ Sửa" Background="#FFC107" Foreground="#212529" Click="btnEdit_Click" Width="100"/>
                        <Button Content="🗑️ Xóa" Background="#DC3545" Foreground="White" Click="btnDelete_Click" Width="100"/>
                        <Button Content="🔄 Làm mới" Background="#6C757D" Foreground="White" Click="btnClear_Click" Width="110"/>
                    </StackPanel>
                </Grid>
            </Border>

            <Border Grid.Row="1"
                    Background="White"
                    CornerRadius="12"
                    Padding="10"
                    Effect="{StaticResource CardShadow}">

                <DataGrid x:Name="dgPlayers"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          CanUserAddRows="False"
                          AlternatingRowBackground="#F8F9FA"
                          RowBackground="White"
                          GridLinesVisibility="None"
                          HeadersVisibility="Column"
                          RowHeight="40"
                          BorderThickness="0"
                          SelectionMode="Single"
                          SelectionChanged="dgPlayers_SelectionChanged">

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Họ tên" Binding="{Binding PlayerName}" Width="*"/>
                        <DataGridTextColumn Header="Đội" Binding="{Binding Team.TeamName}" Width="150"/>
                        <DataGridTextColumn Header="Số áo" Binding="{Binding JerseyNumber}" Width="80"/>
                        <DataGridTextColumn Header="Vị trí" Binding="{Binding Position}" Width="100"/>
                        <DataGridTextColumn Header="Ngày sinh" Binding="{Binding DateOfBirth, StringFormat=dd/MM/yyyy}" Width="120"/>
                        <DataGridTextColumn Header="Quốc tịch" Binding="{Binding Nationality}" Width="120"/>
                        <DataGridTextColumn Header="Trạng thái" Binding="{Binding Status}" Width="120"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>
        </Grid>

        <Border Grid.Row="2" Background="#343A40" Padding="15,0">
            <Grid>
                <TextBlock x:Name="txtStatus" 
                   Foreground="#00FF7F" 
                   FontWeight="Bold"
                   VerticalAlignment="Center" 
                   HorizontalAlignment="Left"/>

                <TextBlock Text="© 2026 - Đặng Ngô Ngọc Việt - Football Management System"
                   Foreground="#ADB5BD"
                   FontSize="12"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Right" Margin="0,12,361.8,12"/>
            </Grid>
        </Border>

    </Grid>
</Window>