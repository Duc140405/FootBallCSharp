<Window x:Class="Football_Management_System.StatisticsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Thong Ke Giai Dau" Height="720" Width="1200"
        WindowStartupLocation="CenterScreen" Background="#F3F4F6">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#1E88E5" CornerRadius="10" Margin="10" Padding="15">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="THONG KE GIAI DAU" Foreground="White" FontSize="22" FontWeight="Bold" VerticalAlignment="Center"/>
                <ComboBox x:Name="cboTournament" Width="250" Height="30" Margin="30,0,0,0"
                          DisplayMemberPath="TournamentName" SelectedValuePath="TournamentID"
                          SelectionChanged="cboTournament_SelectionChanged"/>
                <Button Content="Lam moi" Width="100" Height="30" Margin="10,0,0,0"
                        Background="#607D8B" Foreground="White" Click="btnRefresh_Click"/>
            </StackPanel>
        </Border>

        <UniformGrid Grid.Row="1" Columns="4" Margin="10,10,10,0">
            <Border Background="White" Margin="5" CornerRadius="8" Padding="15">
                <StackPanel>
                    <TextBlock Text="Tong so tran" Foreground="Gray"/>
                    <TextBlock x:Name="txtTotalMatches" Text="0" FontSize="28" FontWeight="Bold" Foreground="#1E88E5"/>
                </StackPanel>
            </Border>
            <Border Background="White" Margin="5" CornerRadius="8" Padding="15">
                <StackPanel>
                    <TextBlock Text="Tong ban thang" Foreground="Gray"/>
                    <TextBlock x:Name="txtTotalGoals" Text="0" FontSize="28" FontWeight="Bold" Foreground="#43A047"/>
                </StackPanel>
            </Border>
            <Border Background="White" Margin="5" CornerRadius="8" Padding="15">
                <StackPanel>
                    <TextBlock Text="The vang" Foreground="Gray"/>
                    <TextBlock x:Name="txtTotalYellow" Text="0" FontSize="28" FontWeight="Bold" Foreground="#FFC107"/>
                </StackPanel>
            </Border>
            <Border Background="White" Margin="5" CornerRadius="8" Padding="15">
                <StackPanel>
                    <TextBlock Text="The do" Foreground="Gray"/>
                    <TextBlock x:Name="txtTotalRed" Text="0" FontSize="28" FontWeight="Bold" Foreground="#E53935"/>
                </StackPanel>
            </Border>
        </UniformGrid>

        <Grid Grid.Row="2" Margin="10,10,10,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <GroupBox Header="Top ghi ban" Grid.Column="0" Margin="5" FontWeight="SemiBold">
                <DataGrid x:Name="dgTopScorers" AutoGenerateColumns="False" CanUserAddRows="False"
                          IsReadOnly="True" Height="200" FontWeight="Normal">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Cau thu" Binding="{Binding PlayerName}" Width="*"/>
                        <DataGridTextColumn Header="Doi" Binding="{Binding TeamName}" Width="120"/>
                        <DataGridTextColumn Header="Ban thang" Binding="{Binding Goals}" Width="80"/>
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>

            <GroupBox Header="Top kien tao" Grid.Column="1" Margin="5" FontWeight="SemiBold">
                <DataGrid x:Name="dgTopAssists" AutoGenerateColumns="False" CanUserAddRows="False"
                          IsReadOnly="True" Height="200" FontWeight="Normal">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Cau thu" Binding="{Binding PlayerName}" Width="*"/>
                        <DataGridTextColumn Header="Doi" Binding="{Binding TeamName}" Width="120"/>
                        <DataGridTextColumn Header="Kien tao" Binding="{Binding Assists}" Width="80"/>
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>
        </Grid>

        <Grid Grid.Row="3" Margin="10,10,10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <GroupBox Header="The phat nhieu nhat" Grid.Column="0" Margin="5" FontWeight="SemiBold">
                <DataGrid x:Name="dgTopCards" AutoGenerateColumns="False" CanUserAddRows="False"
                          IsReadOnly="True" FontWeight="Normal">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Cau thu" Binding="{Binding PlayerName}" Width="*"/>
                        <DataGridTextColumn Header="Doi" Binding="{Binding TeamName}" Width="120"/>
                        <DataGridTextColumn Header="Vang" Binding="{Binding YellowCards}" Width="60"/>
                        <DataGridTextColumn Header="Do" Binding="{Binding RedCards}" Width="60"/>
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>

            <GroupBox Header="Doi hinh tieu bieu (nhieu phut thi dau)" Grid.Column="1" Margin="5" FontWeight="SemiBold">
                <DataGrid x:Name="dgBestXI" AutoGenerateColumns="False" CanUserAddRows="False"
                          IsReadOnly="True" FontWeight="Normal">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Cau thu" Binding="{Binding PlayerName}" Width="*"/>
                        <DataGridTextColumn Header="Vi tri" Binding="{Binding Position}" Width="80"/>
                        <DataGridTextColumn Header="Doi" Binding="{Binding TeamName}" Width="120"/>
                        <DataGridTextColumn Header="Phut" Binding="{Binding MinutesPlayed}" Width="60"/>
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>
        </Grid>
    </Grid>
</Window>