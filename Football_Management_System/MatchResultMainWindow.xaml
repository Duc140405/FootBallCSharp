<Window x:Class="Football_Management_System.MatchResultMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Nguyễn Tấn Đức - Kết quả trận đấu" Height="300" Width="450"
        WindowStartupLocation="CenterScreen">
    <Grid Background="#ECEFF1">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="KẾT QUẢ TRẬN ĐẤU" 
                       FontSize="28" 
                       FontWeight="Bold" 
                       Foreground="#1565C0"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10"/>
            
            <TextBlock Text="Nguyễn Tấn Đức" 
                       FontSize="14" 
                       Foreground="#455A64"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,30"/>
            
            <Button Content="Start"
                    Width="150"
                    Height="40"
                    FontSize="16"
                    Background="#4CAF50"
                    Foreground="White"
                    Click="BtnMatchResult_Click"/>
        </StackPanel>
    </Grid>
</Window>
