<Window x:Class="Football_Management_System.QuanLyDoiBong"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quan Ly Doi Bong" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" Background="#1E88E5" CornerRadius="8" Margin="5">
            <TextBlock Text="QUAN LY DOI BONG" Foreground="White" FontSize="22" FontWeight="Bold" VerticalAlignment="Center" Margin="20,0"/>
        </Border>
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="320"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Border Background="#FAFAFA" CornerRadius="8" Padding="10" Margin="0,0,5,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="Thong Tin Doi Bong" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                        <TextBlock Text="Ten doi" Margin="0,0,0,3"/>
                        <TextBox x:Name="txtTeamName" Height="28"/>
                        <TextBlock Text="Ten viet tat" Margin="0,10,0,3"/>
                        <TextBox x:Name="txtShortName" Height="28"/>
                        <TextBlock Text="San van dong" Margin="0,10,0,3"/>
                        <TextBox x:Name="txtStadium" Height="28"/>
                        <TextBlock Text="Giai dau" Margin="0,10,0,3"/>
                        <ComboBox x:Name="cboTournament" Height="28" DisplayMemberPath="TournamentName" SelectedValuePath="TournamentID"/>
                        <TextBlock Text="Trang thai" Margin="0,10,0,3"/>
                        <ComboBox x:Name="cboStatus" Height="28">
                            <ComboBoxItem Content="Dang thi dau"/>
                            <ComboBoxItem Content="Tam dung"/>
                        </ComboBox>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0">
                            <Button Content="Them" Width="70" Height="30" Margin="5" Background="#43A047" Foreground="White" Click="btnAdd_Click"/>
                            <Button Content="Sua" Width="70" Height="30" Margin="5" Background="#FB8C00" Foreground="White" Click="btnEdit_Click"/>
                            <Button Content="Xoa" Width="70" Height="30" Margin="5" Background="#E53935" Foreground="White" Click="btnDelete_Click"/>
                            <Button Content="Lam moi" Width="70" Height="30" Margin="5" Background="#607D8B" Foreground="White" Click="btnClear_Click"/>
                        </StackPanel>
                        <Border Background="#E3F2FD" CornerRadius="5" Padding="8" Margin="0,10,0,0">
                            <TextBlock x:Name="txtStatus" Text="San sang..." TextWrapping="Wrap"/>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Border>
            <Border Grid.Column="1" Background="White" CornerRadius="10" Margin="5,0,0,0">
                <DataGrid x:Name="dgTeams" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True"
                          SelectionChanged="dgTeams_SelectionChanged">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Ten Doi" Binding="{Binding TeamName}" Width="*"/>
                        <DataGridTextColumn Header="Viet Tat" Binding="{Binding ShortName}" Width="80"/>
                        <DataGridTextColumn Header="San VD" Binding="{Binding Stadium}" Width="120"/>
                        <DataGridTextColumn Header="Trang Thai" Binding="{Binding Status}" Width="100"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>
        </Grid>
    </Grid>
</Window>
