<Window x:Class="Football_Management_System.StandingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quản lý bảng xếp hạng"
        Height="720" Width="1200"
        WindowStartupLocation="CenterScreen">

    <Grid Background="#F2F2F2">
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Border Grid.Row="0" Background="#1E88E5" CornerRadius="10" Margin="10,10,10,8">
            <TextBlock Text="QUẢN LÝ BẢNG XẾP HẠNG GIẢI ĐẤU"
                       Foreground="White"
                       FontSize="26"
                       FontWeight="Bold"
                       VerticalAlignment="Center"
                       Margin="20,0,0,0"/>
        </Border>

        <!-- BODY -->
        <Grid Grid.Row="1" Margin="10,0,10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="360"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- LEFT PANEL -->
            <Border Grid.Column="0" Background="White" CornerRadius="6" Padding="12">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>

                        <TextBlock Text="1. Bộ lọc bảng xếp hạng"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Margin="0,0,0,12"/>

                        <TextBlock Text="Giải đấu" FontWeight="SemiBold" Margin="0,0,0,6"/>
                        <ComboBox Height="34" Margin="0,0,0,12">
                            <ComboBoxItem Content="Giải VĐQG 2026"/>
                            <ComboBoxItem Content="Cup Sinh viên 2026"/>
                        </ComboBox>

                        <TextBlock Text="Vòng đấu" FontWeight="SemiBold" Margin="0,0,0,6"/>
                        <ComboBox Height="34" Margin="0,0,0,12">
                            <ComboBoxItem Content="Tất cả"/>
                            <ComboBoxItem Content="Vòng 1"/>
                            <ComboBoxItem Content="Vòng 2"/>
                            <ComboBoxItem Content="Vòng 3"/>
                        </ComboBox>

                        <TextBlock Text="Tìm kiếm đội bóng" FontWeight="SemiBold" Margin="0,0,0,6"/>
                        <TextBox Height="34"
                                 Padding="10,0"
                                 VerticalContentAlignment="Center"
                                 Margin="0,0,0,12"/>

                        <Separator Margin="0,8"/>

                        <TextBlock Text="2. Chức năng"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Margin="0,10,0,12"/>

                        <Button Content="Làm mới dữ liệu"
                                Height="40"
                                Margin="0,0,0,10"
                                Background="#E0E0E0"/>

                        <Button Content="Tính lại bảng xếp hạng"
                                Height="40"
                                Margin="0,0,0,10"
                                Background="#E0E0E0"/>

                        <Separator Margin="0,8"/>

                        <TextBlock Text="3. Thông tin"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Margin="0,10,0,12"/>

                        <TextBlock Text="Sẵn sàng"
                                   Foreground="Gray"
                                   Margin="0,0,0,6"/>

                        <TextBlock Text="Cập nhật: --/--/---- --:--:--"
                                   Foreground="Gray"/>

                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- RIGHT PANEL -->
            <Border Grid.Column="2" Background="White" CornerRadius="6" Padding="12">
                <TabControl>

                    <!-- TAB 1 -->
                    <TabItem Header="Danh Sách Bảng Xếp Hạng">
                        <Grid Margin="6">
                            <DataGrid AutoGenerateColumns="False"
                                      CanUserAddRows="False"
                                      CanUserDeleteRows="False"
                                      IsReadOnly="True"
                                      HeadersVisibility="Column"
                                      RowHeight="34"
                                      FontSize="13">

                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="STT" Width="60"/>
                                    <DataGridTextColumn Header="Đội Bóng" Width="*"/>
                                    <DataGridTextColumn Header="Số Trận" Width="80"/>
                                    <DataGridTextColumn Header="Thắng" Width="70"/>
                                    <DataGridTextColumn Header="Hòa" Width="70"/>
                                    <DataGridTextColumn Header="Thua" Width="70"/>
                                    <DataGridTextColumn Header="BT" Width="70"/>
                                    <DataGridTextColumn Header="BB" Width="70"/>
                                    <DataGridTextColumn Header="HS" Width="70"/>
                                    <DataGridTextColumn Header="Điểm" Width="80"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </TabItem>

                    <!-- TAB 2 -->
                    <TabItem Header="Quy Tắc Tính Điểm">
                        <Grid Margin="16">
                            <StackPanel>
                                <TextBlock Text="Quy tắc tính điểm chuẩn:"
                                           FontSize="16"
                                           FontWeight="Bold"
                                           Margin="0,0,0,10"/>
                                <TextBlock Text="- Thắng: +3 điểm" FontSize="14" Margin="0,0,0,6"/>
                                <TextBlock Text="- Hòa: +1 điểm" FontSize="14" Margin="0,0,0,6"/>
                                <TextBlock Text="- Thua: +0 điểm" FontSize="14" Margin="0,0,0,6"/>

                                <Separator Margin="0,12"/>

                                <TextBlock Text="Quy tắc xếp hạng:"
                                           FontSize="16"
                                           FontWeight="Bold"
                                           Margin="0,0,0,10"/>
                                <TextBlock Text="1) Điểm giảm dần" FontSize="14" Margin="0,0,0,6"/>
                                <TextBlock Text="2) Hiệu số (BT - BB) giảm dần" FontSize="14" Margin="0,0,0,6"/>
                                <TextBlock Text="3) Tổng bàn thắng giảm dần" FontSize="14" Margin="0,0,0,6"/>
                                <TextBlock Text="4) Nếu bằng nhau: tên đội A-Z" FontSize="14" Margin="0,0,0,6"/>
                            </StackPanel>
                        </Grid>
                    </TabItem>

                    <!-- TAB 3 -->
                    <TabItem Header="Thông Tin Bổ Sung">
                        <Grid Margin="16">
                            <TextBlock Text="Tab này dùng để hiển thị thông tin phụ/ghi chú."
                                       Foreground="Gray"
                                       FontSize="14"
                                       TextWrapping="Wrap"/>
                        </Grid>
                    </TabItem>

                </TabControl>
            </Border>

        </Grid>
    </Grid>
</Window>
