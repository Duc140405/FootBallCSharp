<Window x:Class="Football_Management_System.Statistics.Views.StatisticsAndAwardsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Thong Ke va Giai Thuong" Height="800" Width="1400"
        WindowStartupLocation="CenterScreen">
    <Grid Background="#F5F7FB">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#1E90FF" CornerRadius="10" Margin="10" Padding="15">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="THONG KE &amp; GIAI THUONG" Foreground="White" FontSize="22" FontWeight="Bold" VerticalAlignment="Center"/>
                <ComboBox x:Name="cboTournament" Width="250" Height="30" Margin="30,0,0,0"
                          DisplayMemberPath="TournamentName" SelectedValuePath="TournamentID"
                          SelectionChanged="cboTournament_SelectionChanged"/>
                <Button Content="Lam moi" Width="100" Height="30" Margin="10,0,0,0"
                        Background="#607D8B" Foreground="White" Click="btnRefresh_Click"/>
            </StackPanel>
        </Border>

        <UniformGrid Grid.Row="1" Columns="4" Margin="10,10,10,0">
            <Border Background="White" CornerRadius="12" Margin="5" Padding="15">
                <StackPanel>
                    <TextBlock Text="Tong so tran" FontSize="14" Foreground="Gray"/>
                    <TextBlock x:Name="txtTotalMatches" Text="0" FontSize="28" FontWeight="Bold" Foreground="#1E90FF"/>
                </StackPanel>
            </Border>
            <Border Background="White" CornerRadius="12" Margin="5" Padding="15">
                <StackPanel>
                    <TextBlock Text="Tong ban thang" FontSize="14" Foreground="Gray"/>
                    <TextBlock x:Name="txtTotalGoals" Text="0" FontSize="28" FontWeight="Bold" Foreground="#43A047"/>
                </StackPanel>
            </Border>
            <Border Background="White" CornerRadius="12" Margin="5" Padding="15">
                <StackPanel>
                    <TextBlock Text="The vang" FontSize="14" Foreground="Gray"/>
                    <TextBlock x:Name="txtTotalYellow" Text="0" FontSize="28" FontWeight="Bold" Foreground="#FFC107"/>
                </StackPanel>
            </Border>
            <Border Background="White" CornerRadius="12" Margin="5" Padding="15">
                <StackPanel>
                    <TextBlock Text="The do" FontSize="14" Foreground="Gray"/>
                    <TextBlock x:Name="txtTotalRed" Text="0" FontSize="28" FontWeight="Bold" Foreground="#E53935"/>
                </StackPanel>
            </Border>
        </UniformGrid>

        <Grid Grid.Row="2" Margin="10,10,10,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Border Background="White" CornerRadius="12" Padding="15" Margin="5">
                <StackPanel>
                    <TextBlock Text="Top ghi ban" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
                    <DataGrid x:Name="dgTopScorers" AutoGenerateColumns="False" CanUserAddRows="False"
                              IsReadOnly="True" Height="200">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Cau thu" Binding="{Binding PlayerName}" Width="*"/>
                            <DataGridTextColumn Header="Doi" Binding="{Binding TeamName}" Width="150"/>
                            <DataGridTextColumn Header="Ban thang" Binding="{Binding Goals}" Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Border>

            <Border Background="White" CornerRadius="12" Padding="15" Margin="5">
                <StackPanel>
                    <TextBlock Text="Top kien tao" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
                    <DataGrid x:Name="dgTopAssists" AutoGenerateColumns="False" CanUserAddRows="False"
                              IsReadOnly="True" Height="200">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Cau thu" Binding="{Binding PlayerName}" Width="*"/>
                            <DataGridTextColumn Header="Doi" Binding="{Binding TeamName}" Width="150"/>
                            <DataGridTextColumn Header="Kien tao" Binding="{Binding Assists}" Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Border>
        </Grid>

        <Grid Grid.Row="3" Margin="10,10,10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Border Background="White" CornerRadius="12" Padding="15" Margin="5">
                <StackPanel>
                    <TextBlock Text="The phat nhieu nhat" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
                    <DataGrid x:Name="dgTopCards" AutoGenerateColumns="False" CanUserAddRows="False"
                              IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Cau thu" Binding="{Binding PlayerName}" Width="*"/>
                            <DataGridTextColumn Header="Doi" Binding="{Binding TeamName}" Width="150"/>
                            <DataGridTextColumn Header="Vang" Binding="{Binding YellowCards}" Width="80"/>
                            <DataGridTextColumn Header="Do" Binding="{Binding RedCards}" Width="80"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Border>

            <Border Background="White" CornerRadius="12" Padding="15" Margin="5">
                <StackPanel>
                    <TextBlock Text="Doi hinh tieu bieu" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
                    <DataGrid x:Name="dgBestXI" AutoGenerateColumns="False" CanUserAddRows="False"
                              IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Cau thu" Binding="{Binding PlayerName}" Width="*"/>
                            <DataGridTextColumn Header="Vi tri" Binding="{Binding Position}" Width="100"/>
                            <DataGridTextColumn Header="Doi" Binding="{Binding TeamName}" Width="150"/>
                            <DataGridTextColumn Header="Phut" Binding="{Binding MinutesPlayed}" Width="80"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
