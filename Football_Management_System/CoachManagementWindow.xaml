<Window x:Class="Football_Management_System.CoachManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quản lý Huấn luyện viên" Height="550" Width="900"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="7">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Border Background="#1E88E5" CornerRadius="10">
            <TextBlock Text="QUẢN LÝ HUẤN LUYỆN VIÊN BÓNG ĐÁ"
               Foreground="White" FontSize="22" FontWeight="Bold"
               VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Border>
        <Grid Grid.Row="1" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Border Background="#FAFAFA" CornerRadius="8" Padding="10">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="Thông Tin HLV" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                        <TextBlock Text="Họ và tên" Margin="0,0,0,3"/>
                        <TextBox x:Name="txtCoachName" Height="28"/>
                        <TextBlock Text="Ngày sinh" Margin="0,10,0,3"/>
                        <DatePicker x:Name="dpBirthDate" Height="28"/>
                        <TextBlock Text="Quốc tịch" Margin="0,10,0,3"/>
                        <TextBox x:Name="txtNationality" Height="28"/>
                        <TextBlock Text="Đội bóng đang dẫn dắt" Margin="0,10,0,3"/>
                        <ComboBox x:Name="cboTeam" Height="28" DisplayMemberPath="TeamName" SelectedValuePath="TeamID"/>
                        <TextBlock Text="Số năm kinh nghiệm" Margin="0,10,0,3"/>
                        <TextBox x:Name="txtExperience" Height="28"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0">
                            <Button Content="Thêm" Width="70" Height="30" Margin="5" Background="#43A047" Foreground="White" Click="btnAdd_Click"/>
                            <Button Content="Sửa" Width="70" Height="30" Margin="5" Background="#FB8C00" Foreground="White" Click="btnEdit_Click"/>
                            <Button Content="Xóa" Width="70" Height="30" Margin="5" Background="#E53935" Foreground="White" Click="btnDelete_Click"/>
                            <Button Content="🔄" Width="35" Height="30" Margin="5" Background="#607D8B" Foreground="White" Click="btnClear_Click"/>
                        </StackPanel>
                        <Border Background="#E3F2FD" CornerRadius="5" Padding="8" Margin="0,10,0,0">
                            <TextBlock x:Name="txtStatus" Text="Sẵn sàng..." TextWrapping="Wrap"/>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Border>
            <Border Grid.Column="1" Background="White" CornerRadius="10" Margin="5,0,0,0">
                <DataGrid x:Name="dgCoaches" AutoGenerateColumns="False"
                          CanUserAddRows="False" IsReadOnly="True"
                          SelectionChanged="dgCoaches_SelectionChanged">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Mã" Binding="{Binding CoachID}" Width="50"/>
                        <DataGridTextColumn Header="Họ Tên" Binding="{Binding CoachName}" Width="*"/>
                        <DataGridTextColumn Header="Ngày Sinh" Binding="{Binding BirthDate, StringFormat=dd/MM/yyyy}" Width="100"/>
                        <DataGridTextColumn Header="Quốc Tịch" Binding="{Binding Nationality}" Width="100"/>
                        <DataGridTextColumn Header="Kinh Nghiệm" Binding="{Binding ExperienceYears}" Width="90"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>
        </Grid>
    </Grid>

</Window>
